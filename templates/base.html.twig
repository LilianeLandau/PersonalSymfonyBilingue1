<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> {% block stylesheets %}{% endblock %}
		<style>
			.language-switcher {
				display: flex;
				gap: 10px;
				margin: 10px 0;
			}
			.flag-icon {
				width: 30px;
				height: 20px;
				cursor: pointer;
				border: 1px solid #ccc;
			}
		</style>
	</head>
	<body>
		<div class="container mt-4">
			<div class="language-switcher">
				<a href="{{ path('product_index', {'_locale': 'fr'}) }}">
					<img src="{{ asset('images/fr.png') }}" alt="Français" class="flag-icon">
				</a>
				<a href="{{ path('product_index', {'_locale': 'en'}) }}">
					<img src="{{ asset('images/en.png') }}" alt="English" class="flag-icon">
				</a>
			</div>

			<h1 class="mb-4">
				{% if app.request.locale == 'fr' %}
					Bienvenue sur le site !
				{% else %}
					Welcome on our website !
				{% endif %}
			</h1>

			{% block body %}{% endblock %}
		</div>

		{% block javascripts %}{% endblock %}
	</body>
</html>
